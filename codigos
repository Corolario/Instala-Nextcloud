cryptsetup luksFormat /dev/sda1
cryptsetup luksDump /dev/sda1
cryptsetup open --type luks /dev/sda1 cryptdir 
mkfs -t ext4 /dev/mapper/cryptdir
cryptsetup close cryptdir
